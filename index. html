<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
<title>For Rohit ji ❤️</title>
<style>
  @import url('https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap');

  body, html {
    margin: 0; padding: 0;
    width: 100%; height: 100%;
    background: #000;
    overflow: hidden;
    touch-action: none;
    -webkit-tap-highlight-color: transparent;
  }

  canvas {
    display: block;
    position: absolute;
    top: 0; left: 0;
  }

  /* मोबाइल के लिए ऑप्टिमाइज्ड टेक्स्ट */
  #text-container {
    position: absolute;
    bottom: 12%; 
    left: 0;
    width: 100%;
    text-align: center;
    z-index: 20;
    pointer-events: none;
  }

  #typewriter {
    font-family: 'Dancing Script', cursive;
    font-size: clamp(26px, 8vw, 42px);
    color: #ff4d6d;
    text-shadow: 0 0 15px #ff4d6d, 0 0 30px #ff0040;
    display: inline-block;
    padding: 0 10px;
  }

  /* सुंदर स्टार्ट स्क्रीन */
  #start-screen {
    position: fixed;
    inset: 0;
    background: radial-gradient(circle, #200005 0%, #000 100%);
    color: #ff4d6d;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 100;
    text-align: center;
    transition: opacity 1.5s ease;
  }

  .heart-main {
    font-size: 100px;
    filter: drop-shadow(0 0 20px #ff0040);
    animation: pulse 1.5s infinite ease-in-out;
    cursor: pointer;
  }

  @keyframes pulse { 0%, 100% { transform: scale(1); } 50% { transform: scale(1.15); } }

  .tap-text {
    font-family: sans-serif;
    font-size: 14px;
    letter-spacing: 3px;
    margin-top: 30px;
    opacity: 0.8;
  }
</style>
</head>

<body>

<div id="start-screen" onclick="startExperience()">
  <div class="heart-main">❤️</div>
  <div class="tap-text">TAP FOR ROHIT SAMPLER</div>
</div>

<canvas id="bgCanvas"></canvas>
<canvas id="treeCanvas"></canvas>

<div id="text-container">
  <span id="typewriter"></span>
</div>

<audio id="music" loop>
  <source src="music.mp3" type="audio/mpeg">
</audio>

<script>
const bgCanvas = document.getElementById("bgCanvas");
const bgCtx = bgCanvas.getContext("2d");
const tCanvas = document.getElementById("treeCanvas");
const tCtx = tCanvas.getContext("2d");

let message = "ROHIT❤️ sampler love you";
let treeQueue = [];
let textIndex = 0;
let floatingHearts = [];
let particles = [];

function resize() {
  bgCanvas.width = tCanvas.width = window.innerWidth;
  bgCanvas.height = tCanvas.height = window.innerHeight;
}
window.addEventListener("resize", resize);
resize();

// बैकग्राउंड में तैरते हुए दिल
class Heart {
  constructor(isTouch = false, x = 0, y = 0) {
    this.reset(isTouch, x, y);
  }
  reset(isTouch, x, y) {
    this.x = isTouch ? x : Math.random() * bgCanvas.width;
    this.y = isTouch ? y : bgCanvas.height + 20;
    this.size = isTouch ? Math.random() * 15 + 10 : Math.random() * 10 + 5;
    this.speedX = isTouch ? (Math.random() - 0.5) * 4 : 0;
    this.speedY = isTouch ? (Math.random() - 2) * 3 : -(Math.random() * 1 + 0.5);
    this.opacity = 1;
    this.isTouch = isTouch;
  }
  update() {
    this.y += this.speedY;
    this.x += this.speedX;
    if (this.isTouch) this.opacity -= 0.015;
    if (this.y < -20 || this.opacity <= 0) {
      if (!this.isTouch) this.reset(false);
      return false;
    }
    return true;
  }
  draw() {
    bgCtx.globalAlpha = this.opacity;
    bgCtx.font = `${this.size}px serif`;
    bgCtx.fillText("❤️", this.x, this.y);
  }
}

function startExperience() {
  document.getElementById("start-screen").style.opacity = "0";
  setTimeout(() => document.getElementById("start-screen").remove(), 1500);
  document.getElementById("music").play().catch(() => {});

  for(let i=0; i<25; i++) floatingHearts.push(new Heart());

  // मोबाइल फ्रेंडली साइजिंग
  const isMobile = window.innerWidth < 600;
  const treeBaseY = tCanvas.height * 0.85;
  const branchLen = isMobile ? tCanvas.height * 0.12 : tCanvas.height * 0.18;

  initTree(tCanvas.width / 2, treeBaseY, branchLen, -90, isMobile ? 9 : 10);
  animate();
  setTimeout(typeWriter, 1000);
}

function initTree(x, y, len, angle, depth) {
  if (depth === 0) {
    treeQueue.push(() => {
      tCtx.fillStyle = "#ff0040";
      tCtx.shadowBlur = 15;
      tCtx.shadowColor = "#ff0040";
      tCtx.beginPath();
      tCtx.arc(x, y, 3, 0, Math.PI * 2);
      tCtx.fill();
    });
    return;
  }

  treeQueue.push(() => {
    let rad = angle * (Math.PI / 180);
    let nx = x + Math.cos(rad) * len;
    let ny = y + Math.sin(rad) * len;

    tCtx.beginPath();
    tCtx.strokeStyle = `hsl(345, 100%, ${50 + (10-depth)*3}%)`;
    tCtx.lineWidth = depth * 0.6;
    tCtx.lineCap = "round";
    tCtx.moveTo(x, y);
    tCtx.lineTo(nx, ny);
    tCtx.stroke();

    initTree(nx, ny, len * 0.78, angle - 22, depth - 1);
    initTree(nx, ny, len * 0.78, angle + 28, depth - 1);
  });
}

function typeWriter() {
  if (textIndex < message.length) {
    document.getElementById("typewriter").innerHTML += message.charAt(textIndex);
    textIndex++;
    setTimeout(typeWriter, 120);
  }
}

function animate() {
  bgCtx.clearRect(0, 0, bgCanvas.width, bgCanvas.height);

  // तैरते दिल अपडेट करें
  floatingHearts = floatingHearts.filter(h => {
    let alive = h.update();
    if (alive) h.draw();
    return alive;
  });

  // टच पार्टिकल्स
  particles = particles.filter(p => {
    let alive = p.update();
    if (alive) p.draw();
    return alive;
  });

  // पेड़ की ड्राइंग - मोबाइल पर स्मूथनेस के लिए
  if (treeQueue.length > 0) {
    let steps = Math.min(treeQueue.length, 3);
    for(let i=0; i<steps; i++) {
        treeQueue.splice(0, 1)[0]();
    }
  }

  requestAnimationFrame(animate);
}

// मोबाइल टच इफ़ेक्ट
window.addEventListener('touchstart', (e) => {
    for(let i=0; i<5; i++) {
        particles.push(new Heart(true, e.touches[0].clientX, e.touches[0].clientY));
    }
});
</script>
</body>
</html>
